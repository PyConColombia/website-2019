
.header-content
  background url(images/space-background.jpg) top center no-repeat
  background-size cover
  color color-white
  min-height 100vh
  position relative
  overflow hidden
  width 100%

  .logo
    background url(images/logo.svg) center center no-repeat
    background-size contain
    height 115px
    margin 80px auto 35px
    width auto

  .commet
    background url(images/commet.svg) center center no-repeat
    background-size contain
    height 40px
    margin 0 auto
    mix-blend-mode screen
    width 150px
    
  .planet-left
    background url(images/planet-left.svg) center center no-repeat
    background-size contain
    height 385px
    left -67px
    margin 0 auto
    mix-blend-mode screen
    position absolute
    top 260px
    width 385px
    
  .planet-right
    background url(images/planet-right.svg) center center no-repeat
    background-size contain
    height 468px
    margin 0 auto
    mix-blend-mode screen
    position absolute
    right -170px
    top 320px
    width 647px
    
  .date
    color color-white
    font-size 38px
    font-weight light
    letter-spacing 10px
    line-height 1.5
    margin-bottom 230px
    opacity .8
    text-align center
    text-transform uppercase
    
  .apply-content
    position relative
    text-align center
    
  .planet-earth-content
    bottom -450px
    left 0
    position absolute
    right 0
    top -300px
    .planet-earth-glow
      background url(images/planet-earth-glow.svg) top center no-repeat
      background-size contain
      bottom 0
      content ''
      left 0
      margin 0 auto
      mix-blend-mode color-dodge
      position absolute
      right 0
      top 0
      z-index 0
    .planet-earth-top-glow
      background url(images/planet-earth-top-glow.svg) top center no-repeat
      background-size contain
      bottom 0
      content ''
      left 0
      margin 0 auto
      mix-blend-mode screen
      position absolute
      right 0
      top 0
      z-index 1
    .planet-earth
      background url(images/planet-earth.svg) top center no-repeat
      background-size contain
      bottom 0
      left 0
      margin 0 auto
      position absolute
      right 0
      top 0
      z-index 2
    
  .cfp-message
    color color-white
    font-size 33px
    font-weight light
    letter-spacing 4px
    line-height 1.2
    margin-bottom 32px
    opacity .8
    position relative
    text-align center
    text-transform uppercase
    z-index 10
    
  .apply-btn
    background #0079ac
    background -moz-radial-gradient(top, #0079ac 0%, #014f70 100%)
    background -webkit-radial-gradient(top, #0079ac 0%,#014f70 100%)
    background radial-gradient(to bottom, #0079ac 0%,#014f70 100%)
    border 1px solid #94b8df
    border-radius 100px
    box-shadow 0 0 20px rgba(255,255,255,.9), 0 0 70px rgba(161,45,116,.7)
    color color-white
    display inline-block
    font-size 22px
    font-weight light
    letter-spacing 4px
    line-height 1.2
    height 43px
    margin 0 20px 130px
    padding-top 7px
    position relative
    text-align center
    width 220px
    z-index 10
    &:hover, &:focus
      text-decoration none
    span
      opacity .8
      

  .social-icons-container
    margin-bottom 150px
    text-align center
    position relative
    z-index 10

    .social-icon
      background center center no-repeat
      background-size contain
      display inline-block
      height 35px
      margin 0 21px
      opacity .8
      width 35px

      &.social-twitter
        background-image url(images/social-twitter.svg)
      &.social-facebook
        background-image url(images/social-facebook.svg)
      &.social-instagram
        background-image url(images/social-instagram.svg)
      &.social-medium
        background-image url(images/social-medium.svg)


// @media screen and (max-width: 991px)

@media screen and (max-height: 901px)
  .header-content
    .date
      margin-bottom 190px
    .apply-btn
      margin 0 20px 90px

@media screen and (min-width: 992px) and (max-height: 650px)
  .header-content
    min-height: 150vh
    .date
      margin-bottom 170px
    .apply-btn
      margin 0 auto 70px
  

@media screen and (min-width: 991px) and (max-width: 1300px) and (min-height: 700px)
  .header-content
    min-height: 150vh


@media screen and (max-width: 767px)

  .header-content

    .logo
      height 70px
      margin 50px auto 25px

    .commet
      height 35px
      
    .planet-left
      display none
      
    .planet-right
      display none
      
    .date
      font-size 35px
      letter-spacing 5px
      line-height 1.3
      margin-bottom 60px
      
    .planet-earth-content
      left -50%
      right -50%
      top 0
      
    .cfp-message
      font-size 28px
      letter-spacing 3px
      line-height 1.2
      margin-bottom 25px
      
    .apply-btn
      font-size 21px
      letter-spacing 3px
      height 39px
      margin 0 5px 90px
      width 160px
      

@media screen and (max-width: 330px)

  .header-content

    .logo
      height 60px
      margin 40px auto 15px
      
    .date
      font-size 30px
      margin-bottom 40px
      
    .cfp-message
      font-size 23px
      
    .social-icons-container
      margin-bottom 100px
      
      .social-icon
        height 30px
        margin 0 18px
        width 30px
    
    .apply-btn
      font-size 19px
      letter-spacing 2px
      height 38px
      margin 0 0 90px
      width 140px
  



